                                <li><a href="#">Really cool</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Bah humBug</a><br/></li>
                                <li class="navbar-text">Company motto here!</li>
                            </ul>
                        </li>
                        <li id="nav-tab-portfolio"><a href="#">Link</a></li>
                        <li id="nav-tab-securityuniverse"><a href="#">Another one</a></li>
                        <li id="nav-tab-restrictions"><a href="#">last link</a></li>
                    </ul>
                    <ul class="nav nav-collapse pull-right">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>  
                        <li>@Html.ActionLink("Log In","Login","Account")</li>        
                    </ul>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /.navbar-inner -->
    </div><!-- /.navbar --> 
    
    <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
   </div>              

    @RenderSection("scripts", required:false)

</body>
</html>