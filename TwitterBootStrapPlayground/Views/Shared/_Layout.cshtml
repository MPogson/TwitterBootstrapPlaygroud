        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="nav" style="padding: 0px; vertical-align: central" href="@Url.Action("Index", "Home")">
                    <!--img src="@Url.Content("~/Content/images/winged-sword.png")" width="120" height="48" alt="Parametric" /-->
                </a> 
